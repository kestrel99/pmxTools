Package: pmxTools
Type: Package
Title: Pharmacometric and Pharmacokinetic Toolkit
Version: 1.3
Authors@R: c(person("Justin", "Wilkins", email = "justin.wilkins@occams.com", role = c("aut", "cre"), comment=c(ORCID="0000-0002-7099-9396")),
